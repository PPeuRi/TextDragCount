{
  "manifest_version": 3,
  "name": "TextDragCounter",
  "version": "1.3",
  "description": "텍스트를 드래그하면 글자수가 표기됩니다! 제작자 쁘리",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]}